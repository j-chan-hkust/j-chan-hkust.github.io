---
const images = [
  { src: '/cartoon_profile.jpeg', weight: 0.7 },
  { src: '/corpo-photo3.jpg', weight: 0.2 },
  { src: '/this-is-fine.jpg', weight: 0.1}
];

const random = Math.random();
let selectedImage = images[0].src;
let cumulativeWeight = 0;

for (const image of images) {
  cumulativeWeight += image.weight;
  if (random <= cumulativeWeight) {
    selectedImage = image.src;
    break;
  }
}
---

<img src={selectedImage} alt="Profile" class="profile-picture" />

<style>
  .profile-picture {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 0.5em;
  }
  
  @media (max-width: 720px) {
    .profile-picture {
      width: 36px;
      height: 36px;
      margin-right: 0.4em;
    }
  }
</style>