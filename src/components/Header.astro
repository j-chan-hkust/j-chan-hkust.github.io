---
import HeaderLink from './HeaderLink.astro';
import ProfilePicture from './ProfilePicture.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<div class="container">
		<nav>
			<h2><a href="/"><ProfilePicture />{SITE_TITLE}</a></h2>
			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
			</div>
		</nav>
	</div>
</header>
<style>
	header {
		margin: 0;
		padding: 0;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	.container {
		max-width: 1000px;
		margin: 0 auto;
		padding: 0 1em;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		display: flex;
		align-items: center;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 0.5em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: #548E9B;
	}
	.internal-links {
		margin-left: auto;
	}
</style>
